<Window x:Class="Mihelcic.Net.Visio.Diagrammer.AllStatuses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mihelcic.Net.Visio.Diagrammer"
        mc:Ignorable="d"
        Style="{DynamicResource WindowStyle}" 
        Title="Status History" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0"  ItemsSource="{Binding List}" />
        <Button Grid.Row="1" x:Name="btnOK" Content="OK" Click="btnOK_Click" Width="40" Margin="0,10,0,5" />

    </Grid>
</Window>
